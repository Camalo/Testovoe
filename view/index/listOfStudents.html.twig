{% include '_list.html.twig' with {'URL': URL } %}
<div class="col-12 col-lg-8 col-xl-10">
	<h5 class="header-text">Вывод списка студентов для конкретного занятия</h5>
	<div class="row">
		<div class="col-12 col-lg-3 col-xl-4">
			<div class="form-container rounded">
				<form id="select_lesson_id" method="post">
					<div class="mb-3">
						<select class="form-select" name="lesson">
							{% for lesson in lessons %}
								{% if lesson.id == currentLesson %}
									<option value="{{ lesson.id }}" selected>{{ lesson.title}}</option>
								{% else %}
									<option value="{{ lesson.id }}">{{ lesson.title}}</option>
								{% endif %}
							{% endfor %}
						</select>
					</div>
					<button type="submit" class="btn btn-primary">Submit</button>
				</form>
			</div>
		</div>
		<div class="col-12 col-lg-5 col-xl-7">
			<div class="table-container rounded">
				{% if students|length > 0 %}
					<div>
						<table class="table table-striped">
							<thead>
								<tr>
									<th scope="col">Имя</th>
									<th scope="col">Фамилия</th>

								</tr>
							</thead>
							<tbody>
								{% for student in students %}
									<tr>
										<td>{{ student.first_name }}</td>
										<td>{{ student.last_name }}</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				{% endif %}
			</div>
		</div>
		</div>
		</div>

	</main>

	<script src="{{ URL }}/public/js/listOfStudents.js"></script>
